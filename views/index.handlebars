<div class="jumbotron">
    <h1 class="display-4">The Scraped Post</h1>
    <p class="lead">Add your notes to all the latest articles.</p>
    <hr class="my-4">
    <a class="btn btn-primary btn-lg" href="/scrape" role="button" id="scrape-btn">Update Articles</a>
</div>
<div class="container col-11">
    {{#each articles}}
    <div class="article-container">
        <a href={{link}}>
            <h5>
                {{title}}
            </h5>
        </a>
        <p>{{description}}</p>
        <div class="collapse multi-collapse{{_id}} col-4 pl-0" id="multiCollapseExample1-{{_id}}">
            <input type="text" name="title" id="title-{{_id}}" class="form-control" placeholder="Title">
        </div>
        <div class="collapse multi-collapse{{_id}} col-4 pl-0" id="multiCollapseExample2-{{_id}}">
            <textarea type="text" name="note" id="note-{{_id}}" class="form-control" placeholder="Note"></textarea>
        </div>
        <div class="error">
            <div class="alert alert-danger alert-{{_id}}" role="alert" style="display: none;">
                Make sure you filled in Title and Note section!
            </div>
        </div>
        <p>
            <button class="btn btn-primary note-btn" type="button" data-toggle="collapse"
                data-target=".multi-collapse{{_id}}" aria-expanded="false"
                aria-controls="multiCollapseExample1-{{_id}} multiCollapseExample2-{{_id}}" data-id={{_id}}
                id="note-btn-{{_id}}">Notes</button>
            <button class="btn btn-primary btn-danger note-btn close-{{_id}}" type="button" data-toggle="collapse"
                data-target=".multi-collapse{{_id}}" aria-expanded="false"
                aria-controls="multiCollapseExample1-{{_id}} multiCollapseExample2-{{_id}}" data-id={{_id}}
                style="display: none" id="close-btn-{{_id}}">Close</button>

        </p>
    </div>
    {{/each}}
</div>